<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomePage">

    <!-- Custom Toolbar -->
    <include
        android:id="@+id/toolbar_layout"
        layout="@layout/toolbar_layout"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Hero Banner with Foreground Text
    <FrameLayout
        android:id="@+id/hero_banner"
        android:layout_width="350dp"
        android:layout_height="180dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/toolbar_layout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/home_image_button"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:src="@drawable/homepage_tile_asthetic"
            android:contentDescription="@string/image_button"
            app:shapeAppearanceOverlay="@style/RoundedCornerImage" />

        <TextView
            android:id="@+id/foreground_text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="bottom"
            android:text="@string/Home_page_main_image"
            android:textColor="@android:color/white"
            android:fontFamily="@font/poppins_bold"
            android:textSize="24sp"
            android:textStyle="bold"
            android:background="@drawable/rounded_textview_background"
            android:padding="20dp" />
    </FrameLayout>
    -->
    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/heroViewPager"
        android:layout_width="350dp"
        android:layout_height="180dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/toolbar_layout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Filter Buttons Row -->
    <HorizontalScrollView
        android:id="@+id/filterScroll"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:fillViewport="true"
        app:layout_constraintTop_toBottomOf="@id/heroViewPager"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="8dp"
            android:gravity="start">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/Popular"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:background="@drawable/btn_color_selector"
                android:drawableLeft="@drawable/popular_icon"
                android:minWidth="120dp"
                android:paddingStart="20dp"
                android:paddingEnd="10dp"
                android:text="Popular"
                android:textAllCaps="false"
                android:checkable="true"
                android:textColor="@color/white" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/Filter"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:minWidth="120dp"
                android:layout_marginStart="16dp"
                android:background="@drawable/btn_color_selector"
                android:text="Filter"
                android:textColor="@color/white"
                android:drawableLeft="@drawable/ic_filter"
                android:paddingLeft="20dp"
                android:paddingRight="10dp"
                android:checkable="true"
                android:textAllCaps="false" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/Newest"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:minWidth="120dp"
                android:layout_marginStart="16dp"
                android:background="@drawable/btn_color_selector"
                android:text="Newest"
                android:textColor="@color/white"
                android:drawableLeft="@drawable/ic_newest"
                android:paddingLeft="20dp"
                android:paddingRight="10dp"
                android:checkable="true"
                android:textAllCaps="false" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/PriceHighToLow"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:minWidth="120dp"
                android:layout_marginStart="16dp"
                android:background="@drawable/btn_color_selector"
                android:text="Price High to Low"
                android:textColor="@color/white"
                android:drawableLeft="@drawable/ic_price_hign_to_low_icon"
                android:paddingLeft="20dp"
                android:paddingRight="10dp"
                android:checkable="true"
                android:textAllCaps="false" />
        </LinearLayout>
    </HorizontalScrollView>

    <!-- Product List -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/productRecycler"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:padding="8dp"
        app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/filterScroll"
        app:layout_constraintVertical_bias="1.0"
        app:spanCount="2" />
</androidx.constraintlayout.widget.ConstraintLayout>