<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@color/black"
    tools:context=".MainActivity2"
    >
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black"
        app:cardElevation="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@color/black">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/Signup_image1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/signup1" />

                <TextView
                    android:id="@+id/Signup_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:layout_marginStart="-150dp"
                    android:text="Sign Up"
                    android:textAppearance="@style/TextAppearance.AppCompat.Large"
                    android:textColor="#FFFFFF"
                    android:textSize="24sp"
                    />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="32dp"
                    android:text="Name"
                    android:textColor="#FFFFFF"
                    app:layout_constraintBottom_toTopOf="@+id/Signup_name"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/Signup_image1" />

                <EditText
                    android:id="@+id/Signup_name"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="5dp"
                    android:layout_width="350dp"
                    android:layout_height="50dp"
                    android:background="@drawable/edit_text_rounded_corners"
                    android:hint="     Your first name" />


                <TextView
                    android:id="@+id/email"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="32dp"
                    android:text="Email"
                    android:textColor="#FFFFFF"
                    />

                <EditText
                    android:id="@+id/Signup_email"
                    android:layout_width="350dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/edit_text_rounded_corners"
                    android:hint="     Your email here" />


                <TextView
                    android:id="@+id/username"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="32dp"
                    android:text="User Name"
                    android:textColor="#FFFFFF"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/Signup_email" />

                <EditText
                    android:id="@+id/Signup_username"
                    android:layout_width="350dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="5dp"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/edit_text_rounded_corners"
                    android:hint="     Enter your name here"

                    />


                <TextView
                    android:id="@+id/password"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="32dp"
                    android:layout_marginTop="10dp"
                    android:text="Password"
                    android:textColor="#FFFFFF"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/Signup_username" />

                <EditText
                    android:id="@+id/Signup_password"
                    android:layout_width="350dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/edit_text_rounded_corners"
                    android:hint="     password here"
                    android:inputType="textPassword"
                    android:textColorHint="#A9000000"
                    />

                <CheckBox
                    android:id="@+id/checkBox"
                    android:layout_width="347dp"
                    android:layout_height="35dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginStart="30dp"
                    android:buttonTint="#DA7640"
                    android:checked="false"
                    android:text="By clicking this your agree to our trems and agreement."
                    android:textColor="#FFFFFF"
                    android:textSize="12sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.627"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/Signup_password" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/SignupPage_Login_button"
                    android:layout_width="150dp"
                    android:layout_height="50dp"
                    android:layout_marginStart="30dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/login_page_corner_round2"
                    android:text="Login  âž”"
                    android:textColor="#FFFFFF"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/checkBox"
                    app:strokeColor="#FFFFFF"
                    app:strokeWidth="4dp"
                    />

                <Button
                    android:id="@+id/SignupPage_Signup_button"
                    android:layout_width="157dp"
                    android:layout_height="52dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginStart="50dp"
                    android:background="@drawable/login_page_corner_round"
                    android:text="Sign up"
                    android:textColor="#F4A986"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/checkBox"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/Signup_image3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:layout_marginEnd="73dp"
                    android:layout_marginBottom="16dp"
                    app:srcCompat="@drawable/signup3" />


                <ImageView
                    android:id="@+id/Signup_image4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="-160dp"
                    android:layout_marginTop="110dp"
                    app:srcCompat="@drawable/signup2" />

                <ImageView
                    android:id="@+id/Signup_image2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="120dp"
                    android:layout_marginStart="20dp"
                    app:srcCompat="@drawable/signup4"
                    />

            </LinearLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>