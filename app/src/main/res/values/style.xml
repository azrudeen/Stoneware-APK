<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.Stoneware" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/pepperRed</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/pepperRed</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="FullOverlayGrey">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">#66000000</item> <!-- semi-transparent black/grey -->
    </style>

    <style name="RoundedCornerImage" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">20dp</item> <!-- You can adjust the radius -->
    </style>

    <style name="MyCustomToggleButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="cornerRadius">16dp</item> <!-- Rounded corners -->
        <item name="color">@color/black</item> <!-- Border color -->
        <item name="strokeWidth">2dp</item>
        <item name="backgroundTint">#C4C4C4</item> <!-- Button background -->
        <item name="android:textColor">#0D47A1</item> <!-- Text color -->
    </style>

    <style name="ShapeAppearanceOverlay.Material3.Card.Rounded" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>

</resources>